function drawTable() {
  var table = document.getElementById("companyTable");

  // Clear existing rows (except for the header)
  table.innerHTML = `
    <tr>
      <th style="text-align: left;"><button class="sort-button" onclick="sortTable(0)">Company Name ⇅</button></th>
      <th style="text-align: left;"><button class="sort-button" onclick="sortTable(1)">Ticker ⇅</button></th>
      <th style="text-align: left;"><button class="sort-button" onclick="sortTable(2)">Type ⇅</button></th>
      <th style="text-align: left;"><button class="sort-button" onclick="sortTable(3)">Location ⇅</button></th>
      <th style="text-align: left;"><button class="sort-button" onclick="sortTable(4)">Commodities ⇅</button></th>
    </tr>
  `;

  for (var i = 0; i < companies.length; i++) {
    var company = companies[i];
    var row = `
      <tr>
        <td><a href="${company.website}" target="_blank">${company.name}</a></td>
        <td>${company.ticker}</td>
        <td>${company.type}</td>
        <td>${company.location}</td>
        <td>${company.commodities}</td>
      </tr>
    `;
    table.innerHTML += row;
  }
}

function sortTable(columnIndex) {
  var ascending = true;

  // Check if the column is currently sorted
  if (companies.sortedColumn === columnIndex) {
    ascending = !companies.sortedAscending;
  }

  // Sort the companies array based on the specified column
  companies.sort(function(a, b) {
    var valueA, valueB;
    switch (columnIndex) {
      case 0:
        valueA = a.name.toLowerCase();
        valueB = b.name.toLowerCase();
        break;
      case 1:
        valueA = a.ticker.toLowerCase();
        valueB = b.ticker.toLowerCase();
        break;
      case 2:
        valueA = a.type.toLowerCase();
        valueB = b.type.toLowerCase();
        break;
      case 3:
        valueA = a.location.toLowerCase();
        valueB = b.location.toLowerCase();
        break;
      case 4:
        valueA = a.commodities.toLowerCase();
        valueB = b.commodities.toLowerCase();
        break;
    }
    return ascending ? (valueA < valueB ? -1 : (valueA > valueB ? 1 : 0)) : (valueA > valueB ? -1 : (valueA < valueB ? 1 : 0));
  });

  // Update sorting status
  companies.sortedColumn = columnIndex;
  companies.sortedAscending = ascending;

  drawTable();
}

window.onload = function() {
  // Sort the companies array alphabetically by name
  companies.sort(function(a, b) {
    var nameA = a.name.toLowerCase();
    var nameB = b.name.toLowerCase();
    return (nameA < nameB) ? -1 : (nameA > nameB) ? 1 : 0;
  });

  drawTable();
}
</script>
